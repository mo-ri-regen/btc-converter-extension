{
  "manifest_version": 3,
  "name": "BTC Price Converter",
  "version": "1.0",
  "description": "BTCを入力してドルと日本円を表示する拡張機能",
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://api.coindesk.com/*",
    "https://api.exchangerate-api.com/*",
    "https://api.coingecko.com/*",
    "https://api.coinbase.com/*",
    "https://api.fixer.io/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "BTC Price Converter"
  }
}
